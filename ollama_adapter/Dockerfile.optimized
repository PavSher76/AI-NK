# Оптимизированный Dockerfile для Ollama Adapter с поддержкой Llama3
FROM python:3.11-slim

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Создание рабочей директории
WORKDIR /app

# Копирование файлов зависимостей
COPY requirements.txt .

# Установка Python зависимостей
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Копирование исходного кода
COPY ollama_adapter_optimized.py .

# Создание символической ссылки для обратной совместимости
RUN ln -sf ollama_adapter_optimized.py ollama_adapter.py

# Настройка переменных окружения
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Оптимизация для MacBook Pro
ENV OLLAMA_MODEL=llama3.1:8b
ENV OLLAMA_CPU_THREADS=8
ENV OLLAMA_GPU_LAYERS=35
ENV OLLAMA_BATCH_SIZE=512

# Открытие порта
EXPOSE 8000

# Запуск приложения
CMD ["python", "ollama_adapter_optimized.py"]
