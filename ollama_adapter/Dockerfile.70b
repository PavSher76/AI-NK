# Оптимизированный Dockerfile для Ollama Adapter с поддержкой Llama3.1:70b
FROM python:3.11-slim

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Создание рабочей директории
WORKDIR /app

# Копирование файлов зависимостей
COPY requirements.txt .

# Установка Python зависимостей
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Копирование исходного кода
COPY ollama_adapter_70b.py .

# Создание символических ссылок для обратной совместимости
RUN ln -sf ollama_adapter_70b.py ollama_adapter.py

# Настройка переменных окружения
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Оптимизация для Llama3.1:70b на MacBook Pro
ENV OLLAMA_MODEL=llama3.1:70b
ENV OLLAMA_CPU_THREADS=12
ENV OLLAMA_GPU_LAYERS=40
ENV OLLAMA_BATCH_SIZE=1024

# Дополнительные настройки для 70b модели
ENV OLLAMA_CONTEXT_SIZE=8192
ENV OLLAMA_ROPE_FREQ_BASE=10000
ENV OLLAMA_ROPE_FREQ_SCALE=0.5
ENV OLLAMA_REPEAT_PENALTY=1.1
ENV OLLAMA_TOP_P=0.9
ENV OLLAMA_TOP_K=40

# Открытие порта
EXPOSE 8000

# Запуск приложения
CMD ["python", "ollama_adapter_70b.py"]
