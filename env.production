# AI-NK Production Environment Configuration
# =========================================

# Database Configuration
POSTGRES_HOST=norms-db
POSTGRES_PORT=5432
POSTGRES_DB=norms_db
POSTGRES_USER=norms_user
POSTGRES_PASSWORD=norms_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispass

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Service URLs (внутренние)
GATEWAY_URL=https://ai-nk:8443
DOCUMENT_PARSER_URL=http://ai-nk:8001
RAG_SERVICE_URL=http://ai-nk:8003
RULE_ENGINE_URL=http://ai-nk:8002
CALCULATION_SERVICE_URL=http://ai-nk:8004
VLLM_SERVICE_URL=http://ai-nk:8005
OUTGOING_CONTROL_SERVICE_URL=http://ai-nk:8006
SPELLCHECKER_SERVICE_URL=http://ai-nk:8007

# Security Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Limits (в байтах)
MAX_FILE_SIZE=104857600
MAX_CHECKABLE_DOCUMENT_SIZE=104857600
MAX_NORMATIVE_DOCUMENT_SIZE=209715200

# Timeout Configuration (в секундах)
LLM_REQUEST_TIMEOUT=120
PAGE_PROCESSING_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
TZ=Europe/Moscow
LANG=ru_RU.UTF-8
LC_ALL=ru_RU.UTF-8

# Keycloak Configuration (опционально)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8081

# Monitoring Configuration (опционально)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# External Services (если используются)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Performance Tuning
PYTHONUNBUFFERED=1
PYTHONPATH=/app
TRANSFORMERS_CACHE=/app/models
HF_HOME=/app/models

# Network Configuration
DOCKER_ENV=true
